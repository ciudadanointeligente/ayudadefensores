---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Escazú">

  <!-- Barra inicial -->
  <section class="flex w-full h-auto md:h-60 bg-[url(../assets/bg-ayudadefensores.png)] bg-cover relative py-2 md:py-0">
    <div class="absolute inset-0 bg-cover -z-10"></div>
    <div class="w-full px-4 flex flex-col items-center gap-4 pt-16 pb-6 md:hidden">
      <span class="w-fit inline-block rounded-2xl px-4 py-1 bg-white text-verde text-[12px] font-medium uppercase"><a href="/" class="hover:text-cafemedio">Inicio</a> / Sobre Escazú</span>
      <h1 class="text-3xl font-extrabold text-cafemedio text-center">SOBRE ESCAZÚ</h1>
      <p class="text-cafeoscuro text-base font-medium text-center leading-relaxed">Acuerdo Regional sobre Acceso a la Información, Participación Pública y Acceso a la Justicia en Asuntos Ambientales en América Latina y el Caribe.</p>
    </div>
    <div class="hidden md:flex absolute md:left-[150px] md:mt-4 top-1/3 -translate-y-1/2 w-[calc(100%-150px)] pr-8 flex flex-col gap-8">
      <span class="w-fit inline-block rounded-2xl px-4 py-1 bg-white text-verde text-[12px] font-medium uppercase"><a href="/" class="hover:text-cafemedio">Inicio</a> / Sobre Escazú</span>
      <div class="flex items-start">
        <h1 class="text-6xl font-extrabold text-cafemedio w-[450px] flex-shrink-0 whitespace-nowrap">SOBRE ESCAZÚ</h1>
        <p class="text-cafeoscuro text-lg font-medium max-w-2xl text-left leading-relaxed ml-[300px]">Acuerdo Regional sobre Acceso a la Información, Participación Pública y Acceso a la Justicia en Asuntos Ambientales en América Latina y el Caribe.</p>
      </div>
    </div>
  </section>

</Layout>
