---
import "@/styles/starwind.css";
import "@fontsource-variable/geologica";
import Banner from "../components/Banner.astro";
const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Plataforma de apoyo y recursos para defensores medioambientales en América Latina." />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>Ayuda Defensores - {title} - Ciudadanía Inteligente</title>
  </head>
  <body>
    <Banner />
    <slot />
  </body>
</html>

<style>
html,
body {
  font-family: 'Geologica Variable', sans-serif;
  margin: 0;
  width: 100%;
  height: 100%;
}
</style>
